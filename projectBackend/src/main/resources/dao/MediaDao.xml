<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="backend.project.dao.MediaDao">
    <insert id="insertImage" parameterType="backend.project.model.Media">
        INSERT INTO media
        VALUES (
                   null,#{productId},#{url},
                   #{type},#{creationDate},1,#{transaction.txId},
                   #{transaction.txHost},#{transaction.txUserId},#{transaction.txDate}
               )
    </insert>

    <select id="getMediaList" resultType="backend.project.model.Media">
        SELECT a.media_id as mediaId,
               a.product_id as productId,
               a.url as url,
               a.type as type,
               a.creation_date as creationDate
        FROM media a ,product b
        where a.product_id = #{productId} and b.product_id = #{productId} and a.status = 1

    </select>

</mapper>

