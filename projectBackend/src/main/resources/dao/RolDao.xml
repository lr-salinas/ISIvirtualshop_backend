<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="backend.project.dao.RolDao">
    <insert id="createRol" parameterType="backend.project.model.Rol">
        INSERT INTO rol
        VALUES (
                   null,#{name},#{rolStatus},1,#{transaction.txId},#{transaction.txHost},
                   #{transaction.txUserId},#{transaction.txDate}
               )
    </insert>
    <select id="getLastIdRol" resultType="java.lang.Integer">
        SELECT rol_id FROM rol ORDER BY rol_id DESC LIMIT 1
    </select>
</mapper>
